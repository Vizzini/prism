<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Employees="clr-namespace:ViewModelComposition.Modules.Employees">

    <DataTemplate DataType="{x:Type Employees:EmployeesListPresentationModel}">
        <StackPanel>
            <TextBlock Text="Select Employee:"></TextBlock>
            <ListView x:Name="EmployeesList" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding Path=FirstName}"></GridViewColumn>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding Path=LastName}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>