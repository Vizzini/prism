<UserControl x:Class="CommandDispatch.CompositeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:CommandDispatch"
     Height="227" Width="408">
    <UserControl.CommandBindings>
        <CommandBinding Command="Save" Executed="CommandBinding_Executed" PreviewCanExecute="CommandBinding_PreviewCanExecute" PreviewExecuted="CommandBinding_PreviewExecuted"></CommandBinding>
        <CommandBinding Command="{x:Static s:Commands.MyCommand}" Executed="CommandBinding_Executed" PreviewCanExecute="CommandBinding_PreviewCanExecute" PreviewExecuted="CommandBinding_PreviewExecuted"></CommandBinding>
    </UserControl.CommandBindings>
    <Border BorderBrush="Blue" BorderThickness="3">
        <DockPanel x:Name="ContainerDockPanel">
        <Menu DockPanel.Dock="Top" Name="Menu" Height="29">
            <MenuItem Name="FileMenuItem" Header="File">
  
                <MenuItem Name="SaveMenuItem" Header="Save" Command="Save" />
            </MenuItem>
                <MenuItem Name="EditMenuItem" Header="Edit">
                    <MenuItem Name="CustomMenuItem" Header="CustomCommand" Command="{x:Static s:Commands.MyCommand}" />
                </MenuItem>

            </Menu>
            <TextBlock Foreground="Blue">Composite View</TextBlock>

            
           
    </DockPanel>
        </Border>
</UserControl>
