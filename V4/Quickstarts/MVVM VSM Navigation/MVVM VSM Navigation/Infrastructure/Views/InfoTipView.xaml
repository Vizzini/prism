<UserControl x:Class="MVVM.VSMNavigation.Infrastructure.Views.InfoTipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    x:Name="UserControl"
    d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="10" Opacity="0.5" />
    </UserControl.Effect>

    <Grid x:Name="LayoutRoot" Background="{StaticResource InfoBrush}" >
        <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Margin="8"
                        ContentTemplate="{Binding InformationTemplate, ElementName=UserControl}"
                        Content="{Binding Content}"/>
    </Grid>
</UserControl>
