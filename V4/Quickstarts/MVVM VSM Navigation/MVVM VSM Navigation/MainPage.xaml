<UserControl 
    x:Class="MVVM.VSMNavigation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vs="clr-namespace:MVVM.VSMNavigation.Views"
    xmlns:vm="clr-namespace:MVVM.VSMNavigation.ViewModels"    
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="800">
    <Grid Background="{StaticResource MainBackground}">
        <Grid MinWidth="300" MaxWidth="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" Width="Auto" Foreground="#FFFFFFFF" FontSize="24" FontFamily="Comic Sans MS" Margin="5">
                    <Run Text="MVVM " FontWeight="Bold"/>
                    <Run Text="State Navigation QuickStart" FontWeight="Normal"/>
                </TextBlock>
            </StackPanel>
            <vs:ChatView HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
