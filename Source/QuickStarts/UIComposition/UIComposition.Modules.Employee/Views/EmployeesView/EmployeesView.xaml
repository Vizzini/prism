<UserControl x:Class="UIComposition.Modules.Employee.EmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="clr-namespace:Prism;assembly=Prism"
    xmlns:services="clr-namespace:Prism.Services;assembly=Prism"
    xmlns:local="clr-namespace:UIComposition.Modules.Employee"
    xmlns:controls="clr-namespace:UIComposition.Infrastructure.Controls;assembly=UIComposition.Infrastructure">
    <prism:RegionManager.RegionManagerServiceScope>
        <services:RegionManagerService />
    </prism:RegionManager.RegionManagerServiceScope>
    <StackPanel x:Name="EmployeesPanel">
        <StackPanel x:Name="HeaderPanel"/> 
        <controls:DeckPanel x:Name="DetailsPanel" prism:RegionManager.Region="{x:Static local:RegionNames.DetailsRegion}"/>
    </StackPanel>
</UserControl>
