<Window x:Class="UIComposition.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="clr-namespace:Prism;assembly=Prism"
    xmlns:services="clr-namespace:Prism.Services;assembly=Prism"
    xmlns:infrastructure="clr-namespace:UIComposition.Infrastructure;assembly=UIComposition.Infrastructure" 
    Title="UI Composition QuickStart" Width="700" Height="500">
    <prism:RegionManager.RegionManagerServiceScope>
        <services:RegionManagerService />
    </prism:RegionManager.RegionManagerServiceScope>
    <StackPanel>
        <StackPanel x:Name="MainPanel" prism:RegionManager.Region="{x:Static infrastructure:RegionNames.MainRegion}"></StackPanel>
   </StackPanel> 
</Window>
